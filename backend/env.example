# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# Database (PostgreSQL)
DB_NAME=medguide_db
DB_USER=medguide_user
DB_PASSWORD=your_secure_password
DB_HOST=db
DB_PORT=5432

# CORS Settings (разделите через запятую)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Email Settings (для восстановления пароля)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@medguide.com

# Frontend URL (для ссылок восстановления пароля)
FRONTEND_URL=https://your-frontend-domain.com

# Security Settings (для HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Gunicorn Settings (опционально)
GUNICORN_WORKERS=4
LOG_LEVEL=info

